\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
X(Œ©)=\int_{-\infty}^{\infty}exp(\frac{-t^{2}}{2})exp(-jŒ©t)dt‚âà\int_{-T_{o}/2}^{T_{o}/2}exp(\frac{-t^{2}}{2})exp(-jŒ©t)dt
\]

\end_inset


\end_layout

